# Example environment variables for local dev and CI.
# Copy to .env.local and fill in real values.

# Vercel OIDC token for preview/prod deploys.
# Generate with: vercel env pull / vercel pull
VERCEL_OIDC_TOKEN=""

# ── Public Site ────────────────────────────────────────────
# Base URL for webhook callbacks and absolute links.
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# ── Stripe ─────────────────────────────────────────────────
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
# https://dashboard.stripe.com/webhooks → Signing secret
STRIPE_WEBHOOK_SECRET=""

# ── Thirdweb ───────────────────────────────────────────────
# https://thirdweb.com/dashboard/settings/api-keys
THIRDWEB_SECRET_KEY=""
# Webhook signing secret from Thirdweb dashboard
THIRDWEB_WEBHOOK_SECRET=""
# Chain ID (1 = Ethereum Mainnet, 137 = Polygon, etc.)
THIRDWEB_CHAIN_ID="1"
