{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@repo/entities": [
        "./packages/entities/index.ts"
      ],
      "@repo/entities/*": [
        "./packages/entities/*"
      ],
      "@repo/pipeline": [
        "./packages/pipeline/index.ts"
      ],
      "@repo/pipeline/*": [
        "./packages/pipeline/*"
      ],
      "@repo/antifraud": [
        "./packages/antifraud/index.ts"
      ],
      "@repo/antifraud/*": [
        "./packages/antifraud/*"
      ],
      "@repo/tracing": [
        "./packages/tracing/index.ts"
      ],
      "@repo/tracing/*": [
        "./packages/tracing/*"
      ],
      "@repo/polar": [
        "./packages/polar/index.ts"
      ],
      "@repo/polar/*": [
        "./packages/polar/*"
      ],
      "@repo/shopify": [
        "./packages/shopify/index.ts"
      ],
      "@repo/shopify/*": [
        "./packages/shopify/*"
      ],
      "@repo/stripe": [
        "./packages/stripe/index.ts"
      ],
      "@repo/stripe/*": [
        "./packages/stripe/*"
      ],
      "@repo/paypal-mx": [
        "./packages/paypal-mx/index.ts"
      ],
      "@repo/paypal-mx/*": [
        "./packages/paypal-mx/*"
      ],
      "@repo/mercadopago": [
        "./packages/mercadopago/index.ts"
      ],
      "@repo/mercadopago/*": [
        "./packages/mercadopago/*"
      ],
      "@repo/compropago": [
        "./packages/compropago/index.ts"
      ],
      "@repo/compropago/*": [
        "./packages/compropago/*"
      ],
      "@repo/stp": [
        "./packages/stp/index.ts"
      ],
      "@repo/stp/*": [
        "./packages/stp/*"
      ],
      "@repo/thirdweb": [
        "./packages/thirdweb/index.ts"
      ],
      "@repo/thirdweb/*": [
        "./packages/thirdweb/*"
      ],
      "@repo/onboarding": [
        "./packages/onboarding/index.ts"
      ],
      "@repo/onboarding/*": [
        "./packages/onboarding/*"
      ],
      "@repo/ui": [
        "./packages/ui/index.ts"
      ],
      "@repo/ui/*": [
        "./packages/ui/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
